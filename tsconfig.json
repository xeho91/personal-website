{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "importHelpers": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "$app/*": [
        ".svelte-kit/dev/runtime/app/*",
        ".svelte-kit/build/runtime/app/*"
      ],
      "$data/*": ["src/data/*"],
      "$lib/*": ["src/lib/*"],
      "$scripts/*": ["src/scripts/*"],
      "$styles/*": ["src/styles/*"],
      "$types/*": ["src/types/*"]
    },
    "types": ["node", "svelte"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte"
  ]
}
